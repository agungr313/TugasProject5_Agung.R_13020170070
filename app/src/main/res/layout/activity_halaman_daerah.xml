<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HalamanDaerah">
    
    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="left"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#000000"
        android:text="Pilih Daerah" >
    </TextView>
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btntanjungredeb"
            android:layout_width="360dp"
            android:layout_height="60dp"

            android:background="#6f00ff"
            android:text="TANJUNG REDEB"
            android:textColor="#ffffff"/>

        <Button
            android:id="@+id/btnsendawar"
            android:layout_width="360dp"
            android:layout_height="60dp"

            android:layout_marginTop="20dp"
            android:background="#6f00ff"
            android:text="sendawar"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/btntenggarong"
            android:layout_width="360dp"
            android:layout_height="60dp"

            android:layout_marginTop="20dp"
            android:background="#6f00ff"
            android:text="tenggarong"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/btnsangatta"
            android:layout_width="360dp"
            android:layout_height="60dp"

            android:layout_marginTop="20dp"
            android:background="#6f00ff"
            android:text="sagatta"
            android:textColor="#ffffff"/>

        <Button
            android:id="@+id/btnujohbilang"
            android:layout_width="360dp"
            android:layout_height="60dp"

            android:layout_marginTop="20dp"
            android:background="#6f00ff"
            android:text="ujoh bilang"
            android:textColor="#ffffff"/>

        <Button
            android:id="@+id/btntanapaser"
            android:layout_width="360dp"
            android:layout_height="60dp"

            android:layout_marginTop="20dp"
            android:background="#6f00ff"
            android:text="tana paser"
            android:textColor="#ffffff"/>

        <Button
            android:id="@+id/btnbalikpapan"
            android:layout_width="360dp"
            android:layout_height="60dp"

            android:layout_marginTop="20dp"
            android:background="#6f00ff"
            android:text="balikpapan"
            android:textColor="#ffffff"/>

    </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_navigation"
        app:itemBackground="@color/colorPrimary"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"
        app:menu="@menu/menu_navigation"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>